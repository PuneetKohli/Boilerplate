<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="?android:attr/selectableItemBackground"
              android:clickable="true"
              android:descendantFocusability="blocksDescendants"
              android:focusable="true"
              android:orientation="horizontal"
              android:paddingBottom="16dp"
              android:paddingLeft="16dp"
              android:paddingRight="8dp"
              android:paddingTop="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/artisanProfilePic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/artisanName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:text="Arun Swaminathan"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/artisanCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/artisanName"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignStart="@+id/artisanName"
            android:layout_marginTop="2dp"
            android:gravity="bottom"
            android:text="Mohit Nimbalkar"
            android:textAlignment="gravity"
            android:ellipsize="end"/>
    </RelativeLayout>

</LinearLayout>


